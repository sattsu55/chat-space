%header チャットグループが作成されました
.chat-side
  .chat-side__user
    .chat-side__user__contents
      %p ユーザー名
      %a.fa.fa-cog{href: ''}
      %a.fa.fa-pencil-square-o{href: ''}
  .chat-side__groups
    %p.chat-side__group__name チャットグループ名
    %p.chat-side__group__message メッセージ
.chat-main
  .chat-main__header
    .chat-main__header__contents
      %p.chat-main__header__groupname チャットグループ名
      %a.chat-main__header__editbutton{href: ''} Edit
    %p.chat-main__header__members メンバー一覧
  .chat-main__body
    .chat-main__body__content
      %p.chat-main__body__name 送信者
      %p.chat-main__body__date 日付
      %p.chat-main__body__message メッセージ
  .chat-main__footer
    .chat-main__footer__contents
      %input{placeholder: "type a message"}
      %a.fa.fa-image{href: ''}
      %a.sendbutton{href:''} Send
